# Environment Configuration for UNIFIED HOME ASSISTANT
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ==========================================
# HOME ASSISTANT
# ==========================================
HOME_ASSISTANT_URL=http://192.168.1.134:8123
HOME_ASSISTANT_TOKEN=your_long_lived_access_token_here
HOME_ASSISTANT_VERIFY_SSL=false

# ==========================================
# OMI WEARABLES
# ==========================================
OMI_MCP_API_TOKEN=your_omi_mcp_token_here
OMI_API_URL=https://api.omi.me/v1
OMI_MCP_SSE_URL=https://api.omi.me/v1/mcp/sse

# ==========================================
# AI PROVIDERS
# ==========================================
# Primary AI Provider
AI_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here

# Fallback Providers (optional)
GEMINI_API_KEY=your_google_gemini_key_here
GROK_API_KEY=your_xai_grok_key_here

# AI Configuration
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000
AI_FALLBACK_PROVIDERS=gemini,grok

# ==========================================
# PROXMOX VE
# ==========================================
PROXMOX_HOST=192.168.1.185
PROXMOX_PORT=8006
PROXMOX_VERIFY_SSL=false

# Option 1: API Token (recommended)
PROXMOX_TOKEN=root@pam!your-token-id=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Option 2: Username/Password
# PROXMOX_USERNAME=root@pam
# PROXMOX_PASSWORD=your_password_here

# ==========================================
# GITHUB
# ==========================================
GITHUB_TOKEN=ghp_your_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ==========================================
# MQTT BROKER
# ==========================================
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_USERNAME=homeassistant
MQTT_PASSWORD=secure_mqtt_password_here
MQTT_CLIENT_ID=unified_ha_client

# ==========================================
# INFLUXDB
# ==========================================
INFLUXDB_HOST=localhost
INFLUXDB_PORT=8086
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=secure_influx_password_here
INFLUXDB_TOKEN=your_influxdb_api_token_here
INFLUXDB_ORG=unified-home
INFLUXDB_BUCKET=home_automation

# ==========================================
# GRAFANA
# ==========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password_here
GRAFANA_PORT=3000

# ==========================================
# BEE AI AGENTSTACK
# ==========================================
AGENTSTACK_API_KEY=your_agentstack_key_here
AGENTSTACK_URL=http://localhost:8001
AGENTSTACK_MEMORY_AGENT=memory_processor
AGENTSTACK_TASK_AGENT=task_extractor
AGENTSTACK_HEALTH_AGENT=health_analyzer

# ==========================================
# MOBILE DEVICES
# ==========================================
# Android ADB Configuration
ADB_HOST=192.168.1.100
ADB_PORT=5555

# ==========================================
# NOTIFICATIONS
# ==========================================
NOTIFICATION_SERVICE=notify
ADMIN_NOTIFICATION=notify.admin
MOBILE_NOTIFICATION=notify.mobile_app_phone

# ==========================================
# DOCKER SERVICES
# ==========================================
DOCKER_SOCKET=/var/run/docker.sock

# ==========================================
# TIMEZONE & LOCALE
# ==========================================
TZ=America/New_York
LANG=en_US.UTF-8

# ==========================================
# LOGGING
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================
# SECURITY
# ==========================================
SECRET_KEY=generate_a_random_secret_key_here
JWT_SECRET=generate_a_jwt_secret_here
ENCRYPTION_KEY=generate_an_encryption_key_here

# ==========================================
# BACKUP
# ==========================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backup

# ==========================================
# FEATURES
# ==========================================
ENABLE_WEARABLES=true
ENABLE_PROXMOX=true
ENABLE_GITHUB_SYNC=true
ENABLE_AI_PROVIDERS=true
ENABLE_MOBILE_DEVICES=true

# ==========================================
# DEVELOPMENT
# ==========================================
DEBUG=false
DEVELOPMENT_MODE=false
